        <attr name="indicatorColor" format="reference" />
        <attr name="underlineColor" format="reference" />
        <attr name="indicatorHeight" format="dimension" />
        <attr name="scrollable" format="boolean" />
        <attr name="datasource" format="reference" />
    </declare-styleable>


    <declare-styleable name="MImageView">
        <!-- 加载中展示的图片, 实际设置的为background，需注意变形问题-->
        <attr name="MImageView_loading" format="reference" />
        <!-- 加载出错展示的图片, 实际设置的为background，需注意变形问题 -->
        <attr name="MImageView_loadErr" format="reference" />
        <!-- 缓存文件的路径，默认不用设置 -->
        <attr name="MImageView_cacheFolder" format="string" />
        <!-- 最小宽高比,需设置height=wrap_content eg:宽度为100,0.5代表最小高度为50 -->
        <attr name="MImageView_minaspectratio" format="float" />
        <!-- 宽高比,需设置height=wrap_content eg:宽度为100,0.5代表高度为50 -->
        <attr name="MImageView_aspectratio" format="float" />
        <!-- 最大宽高比,需设置height=wrap_content eg:宽度为100,0.5代表最大高度为50 -->
        <attr name="MImageView_maxaspectratio" format="float" />
    </declare-styleable>
    
    <declare-styleable name="DashLine">
