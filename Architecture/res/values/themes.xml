<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="BaseActivityTheme" parent="android:Theme">
        <item name="android:windowAnimationStyle">@style/BaseAnimation</item>
        <item name="android:windowNoTitle">true</item>
    </style>
    <style name="WebViewActivityTheme" parent="@android:style/Theme">         
	   <item name="android:windowIsTranslucent">true</item>     
	   <item name="android:windowNoTitle">true</item>
	</style> 
	<style name="DialogTheme" parent="android:Theme.Dialog">
        <item name="android:windowAnimationStyle">@style/DialogAnimation</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>

    <style name="BaseDialogTheme" parent="android:Theme">
        <item name="android:windowAnimationStyle">@style/BaseAnimation</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@color/transparent</item>
    </style>
    
    <style name="SplashTheme" mce_bogus="1" parent="BaseActivityTheme">
        <item name="android:windowAnimationStyle">@style/SplashStyle</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <style name="SplashStyle" parent="@android:style/Animation.Translucent">
        <item name="android:windowEnterAnimation">@anim/left_in</item>
        <item name="android:windowExitAnimation">@anim/left_out</item>
    </style>
    
    <style name="LoginTheme" mce_bogus="1" parent="BaseActivityTheme">
        <item name="android:windowAnimationStyle">@style/SplashStyle</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>
    
    <style name="BaseQMoneyActivityTheme" parent="android:Theme">
        <item name="android:windowAnimationStyle">@style/BaseAnimation</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorHighlight">@color/black</item>
    </style>

    <style name="AnimationPreview">
        <item name="android:windowEnterAnimation">@anim/welfare_scale</item>
        <item name="android:windowExitAnimation">@anim/wpop_anim</item>
    </style>

    <style name="BaseAnimation">
        <item name="android:activityOpenEnterAnimation">@anim/left_in</item>
        <item name="android:activityOpenExitAnimation">@anim/left_out</item>
        <item name="android:activityCloseEnterAnimation">@anim/right_in</item>
        <item name="android:activityCloseExitAnimation">@anim/right_out</item>
        <item name="android:taskOpenEnterAnimation">@anim/left_in</item>
        <item name="android:taskOpenExitAnimation">@anim/left_out</item>
        <item name="android:taskCloseEnterAnimation">@anim/right_in</item>
        <item name="android:taskCloseExitAnimation">@anim/right_out</item>
        <item name="android:taskToFrontEnterAnimation">@anim/left_in</item>
        <item name="android:taskToFrontExitAnimation">@anim/left_out</item>
        <item name="android:taskToBackEnterAnimation">@anim/right_in</item>
        <item name="android:taskToBackExitAnimation">@anim/right_out</item>
    </style>

    <style name="DialogAnimation" parent="@android:style/Animation">
        <item name="android:windowEnterAnimation">@anim/bottom_in</item>
        <item name="android:windowExitAnimation">@anim/bottom_out</item>
    </style>

    <style name="ShareActivityTheme" parent="android:Theme">
        <item name="android:windowAnimationStyle">@style/ShareAnimation</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="ShareAnimation">
        <item name="android:activityOpenEnterAnimation">@anim/bottom_in</item>
        <item name="android:activityOpenExitAnimation">@anim/bottom_out</item>
        <item name="android:activityCloseEnterAnimation">@anim/bottom_in</item>
        <item name="android:activityCloseExitAnimation">@anim/bottom_out</item>
        <item name="android:taskOpenEnterAnimation">@anim/bottom_in</item>
        <item name="android:taskOpenExitAnimation">@anim/bottom_out</item>
        <item name="android:taskCloseEnterAnimation">@anim/bottom_in</item>
        <item name="android:taskCloseExitAnimation">@anim/bottom_out</item>
        <item name="android:taskToFrontEnterAnimation">@anim/bottom_in</item>
        <item name="android:taskToFrontExitAnimation">@anim/bottom_out</item>
        <item name="android:taskToBackEnterAnimation">@anim/bottom_in</item>
        <item name="android:taskToBackExitAnimation">@anim/bottom_out</item>
    </style>
    
    <style name="TiredDialogTheme" parent="DialogTheme">
        <item name="android:windowAnimationStyle">@style/ShareAnimation</item>
    </style>
    
</resources>