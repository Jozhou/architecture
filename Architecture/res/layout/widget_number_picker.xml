<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/dd_dimen_160px"
    android:layout_height="wrap_content" >

    <LinearLayout
        android:id="@+id/text"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/increment"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/numberpicker_input"
            android:layout_width="@dimen/dd_dimen_120px"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:singleLine="true"
            android:text="88"
            android:textColor="#333333"
            android:textSize="@dimen/dd_dimen_100px" />

        <TextView
            android:layout_width="@dimen/dd_dimen_40px"
            android:layout_height="wrap_content"
            android:gravity="bottom"
            android:text="ç‚¹"
            android:textColor="#333333"
            android:textSize="@dimen/dd_dimen_30px" />
    </LinearLayout>

    <ImageView
        android:id="@+id/increment"
        android:layout_width="@dimen/dd_dimen_120px"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_marginBottom="@dimen/dd_dimen__20px"
        android:padding="@dimen/dd_dimen_30px"
        android:scaleType="centerInside"
        android:src="@drawable/setting_arrow_up" />

    <ImageView
        android:id="@+id/decrement"
        android:layout_width="@dimen/dd_dimen_120px"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/text"
        android:layout_marginTop="@dimen/dd_dimen__20px"
        android:padding="@dimen/dd_dimen_30px"
        android:scaleType="centerInside"
        android:src="@drawable/setting_arrow_down" />

</RelativeLayout>